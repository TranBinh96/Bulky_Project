@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<partial name="_Notification"/>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> CREATE NEW CATEGORY
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped text-center">
        <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.CategoryList)
        {
            <tr>
                <td>@obj.Name</td> 
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@obj.CategoryId" class="btn btn-primary  mx-2">
                            <i class="bi bi-pencil-square"></i> EDIT
                        </a>
                        <a asp-page="/categories/delete" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> DELETE
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

